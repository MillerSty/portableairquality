<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvAlarmLimits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="68dp"
        android:text="Set Alarm Limits"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_bar"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/IvAlarm"
        android:layout_width="104dp"
        android:layout_height="79dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:contentDescription="image"
        app:layout_constraintStart_toEndOf="@+id/tvAlarmLimits"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="156dp"
        android:layout_height="63dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="44dp"
        android:text="Light/dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAlarmLimits" />

    <TextView
        android:id="@+id/tvVibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="24dp"
        android:text="Vibration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <Switch
        android:id="@+id/switch_vibration"
        android:layout_width="94dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvVibration"
        app:layout_constraintStart_toEndOf="@+id/tvVibration"
        app:layout_constraintTop_toTopOf="@+id/tvVibration" />

</androidx.constraintlayout.widget.ConstraintLayout>